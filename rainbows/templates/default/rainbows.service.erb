#!/usr/bin/ruby

require 'digest/md5'

ROOT_PATH="<%= @deploy[:deploy_to] %>"
APP_NAME="<%= @application %>"
PID_PATH="<%= @deploy[:deploy_to] %>/shared/pids/rainbows.pid"

def run_and_print_command(command)
  puts command
  system(command) || exit(1)
end

def run_and_ignore_exitcode_and_print_command(command)
  puts command
  system(command)
end

def rainbows_running?
  if File.exists?(PID_PATH) && (pid = File.read(PID_PATH).chomp) && system("ps aux | grep #{pid} | grep -v grep > /dev/null")
    pid
  else
    false
  end
end

def different_gemfile?
  if File.exists?("#{ROOT_PATH}/current/Gemfile")
    dir = Dir["#{ROOT_PATH}/releases/*"]
    previous_release_path = dir.sort[dir.size-2]
    if !previous_release_path.nil? && File.exists?("#{previous_release_path}/Gemfile")
      return Digest::MD5.hexdigest(File.read("#{ROOT_PATH}/current/Gemfile")) != Digest::MD5.hexdigest(File.read("#{previous_release_path}/Gemfile"))
    end
  end
  false
end

def start_rainbows
  if File.exists?("#{ROOT_PATH}/current/Gemfile")
    puts "OpsWorks: Gemfile detected - running Rainbows with bundle exec"
    run_and_ignore_exitcode_and_print_command "cd #{ROOT_PATH}/current && /usr/local/bin/bundle exec rainbows --env <%= @deploy[:rails_env] %> --daemonize -c #{ROOT_PATH}/shared/config/rainbows.conf"
  else
    puts "OpsWorks: no Gemfile detected - running plain Rainbows"
    run_and_ignore_exitcode_and_print_command "cd #{ROOT_PATH}/current && rainbows --env <%= @deploy[:rails_env] %> --daemonize -c #{ROOT_PATH}/shared/config/rainbows.conf"
  end
end

def stop_rainbows
  if rainbows_running?
    if run_and_ignore_exitcode_and_print_command "kill -QUIT `cat #{PID_PATH}`"
      `rm #{PID_PATH}`
    end
  else
    puts "You can't stop rainbows, because it's not running"
  end
end

def restart_rainbows
	if rainbows_running?
		run_and_ignore_exitcode_and_print_command "kill -USR2 `cat #{PID_PATH}`"
	else
		start_rainbows
	end
end

def clean_restart
  if different_gemfile?
    puts "Found a previous version with a different Gemfile: Doing a stop & start"
    stop_rainbows if rainbows_running?
    start_rainbows
  else
    puts "No previous version with a different Gemfile found. Assuming a quick restart without re-loading gems is save"
    restart_rainbows
  end
end

def status_rainbows
	if pid = rainbows_running?
		puts "Rainbows <%= @application %> running with PID #{pid}"
		return true
	else
		puts "Rainbows <%= @application %> not running"
		return false
  end
end

case ARGV[0]
when "start"
  puts "Starting Rainbows #{APP_NAME}"
  start_rainbows
when "stop"
  puts "Stopping Rainbows #{APP_NAME}"
  stop_rainbows
when "status"
  status_rainbows
when "restart"
  restart_rainbows
when "clean-restart"
  clean_restart
else
  puts "Usage: {start|stop|status|restart|clean-restart}"
  exit 1
end

exit 0
